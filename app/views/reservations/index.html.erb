<section class="section-top">
    <h2>予約済み部屋一覧</h2>
    <% if @reservations.present? %>
      
    <table class="reservations_list">
      <tr>
        <th>部屋の写真</th>
        <th>部屋名</th>
        <th>場所</th>
        <th>合計料金</th>
        <th>チェックイン/チェックアウト</th>
        <th>予約確定日時</th>
      </tr>
      
      <% @reservations.each do |reservation| %>
        <tr>
            <td class="hotel-thumbnail">
              <% if reservation.hotel.image? %>
                <%= image_tag reservation.hotel.image.thumb.url %>
              <% else %>
                <%= image_tag('hotel_sample.jpeg') %>
              <% end %>
            </td>
            <td><%= link_to reservation.hotel.name, reservation %></td>
            <td><%= reservation.hotel.area %></td>
            <td>¥ <%= reservation.total_fee %></td>
            <td><%= reservation.checkin %> / <%= reservation.checkout %></td>
            <td><%= reservation.created_at.to_s(:datetime_jp) %></td>
         </tr>
      <% end %>  
    </table> 

    <% else %>
  　<p>予約済みの部屋はありません</p>
  　<% end%>
  </section>
